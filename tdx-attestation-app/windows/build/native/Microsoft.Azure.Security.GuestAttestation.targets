<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003" >
  <Target Name="MicrosoftGuestAttestationLibrary_x64" BeforeTargets="PostBuildEvent;PrepareForRun" Condition="'$(PlatformTarget)'=='x64'">
    <ItemGroup>
      <BinFiles Include="$(MSBuildThisFileDirectory)\lib\x64\AttestationClientLib.dll" />
    </ItemGroup>
    <Copy SourceFiles="@(BinFiles)" DestinationFolder="$(OutDir)" />
  </Target>
  <Target Name="MicrosoftGuestAttestationLibrary_Clean" BeforeTargets="Clean">
    <ItemGroup>
      <BinFiles Include="$(OutDir)\AttestationClientLib.dll" />
    </ItemGroup>
    <Delete Files="@(BinFiles)" />
  </Target>
</Project>